{%  extends "MediaBundle:Default:base.html.twig" %}
{% block body %}
    <h1 align="center">Liste des médias</h1>
    <div class="row" align="center">  <a href="{{ path('media_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i>
            Créer un nouveau media</a></div>
    <hr>
    <div class="row">
    {% for medium in media %}
        <div class="col-xs-18 col-sm-6 col-md-3">
            <div class="thumbnail">
                <img src="{{ asset('uploads/medias/' ~ medium.path) }}" alt="">
                <div class="caption">
                    <h4> <a href="{{ path('media_show', {'id':medium.id}) }}">#{{ medium.id }}</a> {{ medium.name }}</h4>
                    <h6>Extension : {{ medium.extension }}</h6>
                    <p>Genre : {{ medium.genre.name }}</p>
                    <p><a href="{{ path('media_show', { 'id': medium.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-eye" aria-hidden="true"></i>
                        Afficher</a> <a href="{{ path('media_edit', { 'id': medium.id }) }}" class="btn btn-warning btn-xs"><i class="fa fa-pencil" aria-hidden="true"></i>
                            Editer</a></p>
                </div>
            </div>
        </div>
{% endfor %}
    </div>
{% endblock %}
