{%  extends "MediaBundle:Default:base.html.twig" %}

{% block body %}
    <h1 align="center">Liste des personnes</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Password</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td><a href="{{ path('personne_show', { 'id': personne.id }) }}">{{ personne.id }}</a></td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.email }}</td>
                <td>{{ personne.password }}</td>
                <td>{{ personne.latitude }}</td>
                <td>{{ personne.longitude }}</td>
                <td>
                    <p>
                            <a href="{{ path('personne_show', { 'id': personne.id }) }}" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i>
                                 Afficher</a>
                    </p>
                    <p>
                            <a href="{{ path('personne_edit', { 'id': personne.id }) }}" class="btn btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i>
                                 Editer</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('personne_new') }}" class="btn btn-primary"><i class="fa fa-plus-circle" aria-hidden="true"></i>
                 Cr√©er une personne</a>

{% endblock %}
