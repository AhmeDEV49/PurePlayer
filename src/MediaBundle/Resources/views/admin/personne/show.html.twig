{%  extends "MediaBundle:Default:base.html.twig" %}

{% block body %}
    <h1>Personne n°{{ personne.id }}</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ personne.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ personne.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ personne.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ personne.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ personne.password }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ personne.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ personne.longitude }}</td>
            </tr>
        </tbody>
    </table>
    <p>
            <a href="{{ path('personne_edit', { 'id': personne.id }) }}" class="btn btn-warning">Editer</a>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
    </p>

    <a href="{{ path('personne_index') }}"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        Retourner à la liste des personnes</a>
{% endblock %}
