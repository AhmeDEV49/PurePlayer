{%  extends "MediaBundle:Default:base.html.twig" %}

{% block body %}
    <h1>Type de média n°{{ typeMedia.id }}</h1>

    <table class="table table-stripered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ typeMedia.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ typeMedia.name }}</td>
        </tr>
        </tbody>
    </table>
    <p>
        <a href="{{ path('typemedia_edit', { 'id': typeMedia.id }) }}" class="btn btn-warning">Editer</a>
    </p>
    {{ form_start(delete_form) }}
    <input type="submit" value="Supprimer" class="btn btn-danger">
    {{ form_end(delete_form) }}
    <hr>
    <a href="{{ path('typemedia_index') }}"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Retourner aux types de médias</a>
{% endblock %}