{%  extends "MediaBundle:Default:base.html.twig" %}

{% block body %}
    <h1>Genre n°{{ genre.id }}</h1>
    <table class="table table-stripered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ genre.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ genre.name }}</td>
        </tr>
        </tbody>
    </table>
    <p>
    <a href="{{ path('genre_edit', { 'id': genre.id }) }}" class="btn btn-warning">Mettre à jour</a>
    </p>
    {{ form_start(delete_form) }}
    <input type="submit" value="Supprimer" class="btn btn-danger">
    {{ form_end(delete_form) }}
    <hr>
    <a href="{{ path('genre_index') }}"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Retourner aux genres</a>
{% endblock %}